<?xml version="1.0"?>
<!-- see http://www.phpunit.de/wiki/Documentation -->

<phpunit bootstrap="./boot.php"
         colors="false"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="false"
         convertWarningsToExceptions="false"
         stopOnFailure="false">

    <groups>
        <include>
            <group>isolate</group>
            <group>current</group>
        </include>
        <exclude>

        </exclude>
    </groups>

    <filter>
        <blacklist>
            <directory suffix=".php">./../src/Library/Doctrine</directory>
        </blacklist>
    </filter>
</phpunit>
